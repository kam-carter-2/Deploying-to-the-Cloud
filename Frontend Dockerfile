# frontend/Dockerfile
FROM node:18-alpine AS build
WORKDIR /app

# accept VITE build arg
ARG VITE_API_URL
ENV VITE_API_URL=$VITE_API_URL

# copy and install
COPY package*.json ./
RUN npm install

# copy source & build (Vite uses VITE_API_URL at build time)
COPY . .
RUN npm run build

# Stage 2: serve with nginx
FROM nginx:alpine
COPY --from=build /app/dist /usr/share/nginx/html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
